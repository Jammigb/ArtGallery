@page
@model ArtGallery.Pages.ArtList.EditModel
@{
}

<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Arts.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Arts.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Arts.Name" class="form-control" />
            </div>
            <span asp-validation-for="Arts.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Arts.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Arts.Author" class="form-control" />
            </div>
            <span asp-validation-for="Arts.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Arts.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Arts.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Arts.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}